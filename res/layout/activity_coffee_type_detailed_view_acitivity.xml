<LinearLayout
    android:id="@+id/coffee_type_detailed_view_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.percolate.coffee.activity.CoffeeTypeDetailedViewAcitivity">

    <TextView
        android:id="@+id/coffee_detailed_item_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textColor="@color/coffee_title_text_grey"
        android:textSize="24dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/coffee_description_text_grey"/>

    <TextView
        android:id="@+id/coffee_detailed_item_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/coffee_standard_buffer_padding"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textColor="@color/coffee_description_text_grey"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/coffee_detailed_item_image_loading_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>


        <ImageView
            android:id="@+id/coffee_detailed_item_picture_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:scaleType="centerInside"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/coffee_detailed_item_updated_at_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/coffee_standard_buffer_padding"
        android:textColor="@color/coffee_description_text_grey"
        android:textSize="@dimen/coffee_detailed_item_updated_at_text_view_font_size"/>

</LinearLayout>
